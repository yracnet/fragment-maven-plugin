<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://maven.apache.org/POM/4.0.0" 
								xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
								xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://raw.githubusercontent.com/yracnet/fragment-maven-plugin/master/fragment-maven-plugin/src/main/resources/META-INF/fragment-4.0.0.xsd" >
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-pmd-plugin</artifactId>
	<version>3.7</version>
	<executions>
		<execution>
			<goals>
				<goal>pmd</goal>
			</goals>
			<configuration>
				<targetJdk>1.8</targetJdk>		
			</configuration>
		</execution>
		<execution>
			<goals>
				<goal>cpd</goal>
			</goals>
			<configuration>
				<minimumTokens>150</minimumTokens>
			</configuration>
		</execution>
		<execution>
			<goals>
				<goal>check</goal>
			</goals>
			<configuration>
				<!--sourceEncoding>UTF-8</sourceEncoding-->
			</configuration>
		</execution>
		<execution>
			<goals>
				<goal>cpd-check</goal>
			</goals>
		</execution>
	</executions>
</plugin>